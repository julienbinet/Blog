{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <h1>Connexion</h1>
                    {% if error %}
                        <div class="form-group has-error">
                            <div class="control-label">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        </div>
                    {% endif %}
                    <div>
                        <input type="text" class="form-control" required="required" placeholder="Nom d'utilisateur" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                    <div>
                        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Mot de passe" required="" />
                    </div>
                    <div>
                        <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        <a class="reset_pass" href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu?</a>
                    </div>

                    <div class="clearfix"></div>

                    <div class="separator">
                        <p class="change_link">Nouveau sur ce site?
                            <a href="#signup" class="to_register"> Créez votre compte </a>
                        </p>

                        <div class="clearfix"></div>
                        <br />

                        <div>
                            <h1><i class="fa fa-paw"></i> Mon Site!</h1>
                            <p>&copy; Copyright {{"now"|date('Y')}} - Binet Julien</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>

        <div id="register" class="animate form registration_form">
            <section class="login_content">


                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                <h1>Créez votre compte</h1>
                {#{{ form_widget(form) }}#}

                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder' : "Votre Email"} }) }}
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder' : "Nom d'utilisateur"} }) }}
                {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder' : "Mot de passe"} }) }}
                {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder' : "Confirmez votre mot de passe"} }) }}
                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}

                <div>
                    <input type="submit" class="btn btn-primary"  value="{{ 'registration.submit'|trans }}" />
                </div>
                {{ form_end(form) }}

                <div class="clearfix"></div>

                <div class="separator">
                    <p class="change_link">Déjà membre ?
                            <a href="#signin" class="to_register"> Connexion </a>
                        </p>

                    <div class="clearfix"></div>
                    <br />

                    <div>
                        <div><i class="fa fa-paw"></i> Mon Site!</div>
                        <p>&copy; Copyright {{"now"|date('Y')}} - Binet Julien</p>
                    </div>
                    </div>



            </section>
        </div>
    </div>

{% endblock body %}
