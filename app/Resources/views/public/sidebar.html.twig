

<div class="block">
    <h4 class="title">Derniers articles</h4>
    <ul class="list">
        {% for post in posts %}
            <li class="list-item">
                <a href="{{ path('post_show', {id : post.id}) }}"><span class="post-title">{{ post.title}}</span></a>
                <span class="post-date">({{ post.created | date('d/m/Y') }})</span>
            </li>
        {% endfor %}
    </ul>

</div>

<div class="block">
    <h4 class="title"> Categories</h4>
    <ul class="list">
    {% for category in categories %}
        <li class="list-item">{{ category.name }}</li>
    {% endfor %}
    </ul>
</div>
