{% extends '::layout/base.html.twig' %}

{% block body %}

    <div class="container" id="post">
        <div class="row">

            <article class="col s12 l8 post-content">


            <header class="post-header">
                <h1>{{ post.title }}</h1>
            <img src="{{ post.image.AssetPath|imagine_filter('my_thumb') }}" class='img-responsive' alt="{{ post.image.name }}" >
            </header>

            {{ post.content|raw }}

            <p>Cat√©gorie : {{ post.category.name }}</p>
            <p>Tags : {% for tag in post.tags %}{{ tag.name}}{% if not loop.last %}, {% endif %} {% endfor %}</p>

            <p>le {{ post.created | date('d/m/Y') }} par {{ post.idUser.username }}</p>
            </article>

            <div class="col s12 l3 offset-l1 sidebar">
                SIDEBAR
                {{ render(controller('AppBundle:Default:sidebar')) }}
            </div>

        </div>
    </div>


{% endblock %}

