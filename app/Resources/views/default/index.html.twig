{% extends '::layout/base.html.twig' %}

{% block body %}
    <div class="row">
        <h1>Bienvenue !</h1>
    </div>

    <div class="row">
        <div class="count">
            Nombre d'articles : {{ posts.getTotalItemCount }}
        </div>
        <table class="table">
            <tr>
                {# sorting of properties based on query components #}
                <th>{{ knp_pagination_sortable(posts, 'Id', 'a.id') }}</th>
                <th{% if posts.isSorted('a.title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(posts, 'Title', 'a.title') }}</th>
                <th>{{ knp_pagination_sortable(posts, 'Date', ['a.created', 'a.updated']) }}</th>
            </tr>

            {# table body #}
            {% for post in posts %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.created | date('Y-m-d') }}, {{ post.updated | date('H:i:s') }}</td>
                </tr>
            {% endfor %}
        </table>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(posts) }}
        </div>
    </div>


{% endblock %}

