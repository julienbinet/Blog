{% extends '::layout/baseAdmin.html.twig' %}

{% block page_content %}
    <h1>Listes des articles</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th></th>
            <th>Titre</th>
            <th>Contenu</th>
            <th>Modifié le</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>
                    <a href="{{ path('post_show', { 'id' : post.id }) }}">
                        <img src="{{ post.image.AssetPath|imagine_filter('my_thumb_mini') }}" class='img-responsive' alt="{{ post.image.name }}" >
                    </a>
                </td>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.title }}</a></td>
                <td>{{ post.content|excerpt(15) }}</td>
                <td>{% if post.contentChanged %}{{ post.contentChanged|date('Y-m-d H:i:s') }}{% else %}{{ post.created|date('d/m/Y à H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('post_show', { 'id': post.id }) }}"><i class="fa fa-lg fa-eye"></i></a>
                    <a href="{{ path('post_edit', { 'id': post.id }) }}"><i class="fa fa-lg  fa-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Nouvel article</a>
        </li>
    </ul>
{% endblock %}
